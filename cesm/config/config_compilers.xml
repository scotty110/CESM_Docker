<?xml version="1.0" encoding="UTF-8"?>
<config_compilers version="2.0">
   <compiler COMPILER="gnu">
       <NETCDF_PATH>$ENV{NETCDF_PATH}</NETCDF_PATH>
       
       <CFLAGS>
           <base> -O3 </base>
       </CFLAGS>
       
       <CPPDEFS>
           <append> -DFORTRANUNDERSCORE -DNO_R16 -DCPRGNU</append>
       </CPPDEFS>
       
       <CXX_LINKER>FORTRAN</CXX_LINKER>
       
       <FC_AUTO_R8>
           <base> -r8 </base>
       </FC_AUTO_R8>
       
       <FFLAGS>
           <base> -Mfree -Ktrap=none -Mnomax_dims</base>
           <append> -O3 </append>
       </FFLAGS>
       
       <FIXEDFLAGS>
           <base> -Mfixed </base>
       </FIXEDFLAGS>
       
       <FREEFLAGS>
           <base> -Mfree </base>
       </FREEFLAGS>
       
       <HAS_F2008_CONTIGUOUS>FALSE</HAS_F2008_CONTIGUOUS>
       
       <LDFLAGS>
           <append> -L/usr/local/lib </append>
           <append> -llapack </append>
           <append> -lblas </append>
       </LDFLAGS>
       
       <MPICC> mpicc </MPICC>
       <MPICXX> mpicxx </MPICXX>
       <MPIFC> mpif90 </MPIFC>
       
       <SCC> nvc </SCC>
       <SCXX> nvcc </SCXX>
       <SFC> nvfortran </SFC>
       
       <SUPPORTS_CXX>TRUE</SUPPORTS_CXX>
   </compiler>
</config_compilers>
    
